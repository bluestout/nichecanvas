          {%endif%}
          {%endfor%}
        </div>
        <div class="unique-center-sec">
          {% for block in section.blocks %}
          {%if forloop.index == 4 or forloop.index == 5 or forloop.index == 6  %}
          <div class="unique-left-sec-first">
            <a href="{{ block.settings.link}}" class="fs_uChvrBtn"></a>
