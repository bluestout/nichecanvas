<section id="unique">
  <div class="main-unique-sec">
    <div class="page-width">
      <div class="unique-title">
        <h3>{{section.settings.section_title}}</h3>
        <p>{{section.settings.section_subtitle}}</p>
        <a href="{{section.settings.collection_link}}">All collection<svg width="36px" height="9px" viewBox="0 0 36 9" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
          <g id="web" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
            <g id="home-v1" transform="translate(-1525.000000, -1303.000000)">
              <g id="arrow-copy-4" transform="translate(1525.000000, 1303.000000)">
                <polygon id="arrow" fill="#000000" points="31 9 36 4.50625 31.0046468 0"></polygon>
                <line x1="31.5" y1="4.5" x2="0.5" y2="4.5" id="Line-2" stroke="#000000" stroke-linecap="square"></line>
              </g>
            </g>
          </g>
          </svg></a>
      </div>
      <div class="unique-contact">
        <div class="unique-left-sec">
          {% for block in section.blocks %}
          {%if forloop.first %}
          <div class="unique-left-sec-first-left">
            <a href="{{ block.settings.link}}" class="fs_uChvrBtn"></a>
            <img src="{{ block.settings.image | img_url: "medium"}}" alt="Image" title="Cars">
            <div class="uChvrBtn" >
              <p>{{ block.settings.Title}}</p>
              <a href="{{ block.settings.link}}">{{ block.settings.btntext}}</a>
            </div>
            <p class="muCtxT">{{ block.settings.Title}}</p>
          </div>
          {%endif%}
          {%if forloop.index == 2 %}
          <div class="unique-left-sec-first-right">
            <a href="{{ block.settings.link}}" class="fs_uChvrBtn"></a>
            <img src="{{ block.settings.image | img_url: "medium"}}" alt="Image" title="Flowers">
            <div class="uChvrBtn" >
