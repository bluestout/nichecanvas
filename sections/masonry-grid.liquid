            <div class="uChvrBtn" >
              <p>{{ block.settings.Title}}</p>
              <a href="{{ block.settings.link}}">{{ block.settings.btntext}}</a>
            </div>
            <p class="muCtxT">{{ block.settings.Title}}</p>
          </div>
          {%endif%}
          {%endfor%}
        </div>
        <div class="unique-right-sec">
          {% for block in section.blocks %}
          {%if forloop.index == 7 %}
          <div class="unique-left-sec-over-main">
            <a href="{{ block.settings.link}}" class="fs_uChvrBtn"></a>
            <img src="{{ block.settings.image | img_url: "large"}}" alt="Image" title="Space">
            <div class="uChvrBtn" >
              <p>{{ block.settings.Title}}</p>
              <a href="{{ block.settings.link}}">{{ block.settings.btntext}}</a>
            </div>
            <p class="muCtxT">{{ block.settings.Title}}</p>
          </div>
          {%endif%}
          {%if forloop.index == 8 %}
          <div class="unique-left-sec-first-left">
            <a href="{{ block.settings.link}}" class="fs_uChvrBtn"></a>
            <img src="{{ block.settings.image | img_url: "medium"}}" alt="Image" title="Animal">
            <div class="uChvrBtn" >
              <p>{{ block.settings.Title}}</p>
              <a href="{{ block.settings.link}}">{{ block.settings.btntext}}</a>
            </div>
            <p class="muCtxT">{{ block.settings.Title}}</p>
          </div>
          {%endif%}
          {%if forloop.index == 9 %}
          <div class="unique-left-sec-first-right">
            <a href="{{ block.settings.link}}" class="fs_uChvrBtn"></a>
            <img src="{{ block.settings.image | img_url: "medium"}}" alt="Image" title="Hindu Gods">
            <div class="uChvrBtn" >
              <p>{{ block.settings.Title}}</p>
              <a href="{{ block.settings.link}}">{{ block.settings.btntext}}</a>
            </div>
            <p class="muCtxT">{{ block.settings.Title}}</p>
          </div>
          {%endif%}
          {%endfor%}
        </div>

        <div class="unique-bottom-sec">
          {% for block in section.blocks %}
          {% unless forloop.index == 1 or forloop.index == 2 or forloop.index == 3 or forloop.index == 4 or forloop.index == 5 or forloop.index == 6 or forloop.index == 7 or forloop.index == 8 or forloop.index == 9%}
          {% if forloop.last%} 

          <div class="unique-btm-main LastViewGrid">
            <img src="{{ block.settings.image | img_url: "medium"}}" alt="Image" title="Space">
            <div class="uChvrAll" >
              <a href="#">Explore 30+ collections <img src="https://cdn.shopify.com/s/files/1/2012/8501/t/103/assets/arrow_copy_4.svg"> </a>
            </div>
          </div>

          {%else%}
          <div class="unique-btm-main">
            <a href="{{ block.settings.link}}" class="fs_uChvrBtn"></a>
            <img src="{{ block.settings.image | img_url: "medium"}}" alt="Image" title="Space">
            <div class="uChvrBtn" >
              <p>{{ block.settings.Title}}</p>
              <a href="{{ block.settings.link}}">{{ block.settings.btntext}}</a>
            </div>
            <p class="muCtxT">{{ block.settings.Title}}</p>
          </div>
          {%endif%}
          {%endunless%}
          {%endfor%}
        </div>

      </div>
      <div class="MobileMasnoryLink">
        <a href="{{section.settings.collection_link}}">All Collections</a>
      </div>
    </div>
  </div>
</section>

