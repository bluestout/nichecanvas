{% comment %}
    Renders a list of menu items
    Accepts:
    - linklist: {Object} Linklist Liquid object (required)
    - wrapper_class: {String} CSS wrapper class for the navigation (optional)

    Usage:
    {% include 'site-nav', linklist: section.settings.main_linklist, wrapper_class: 'site-nav--centered' %}
{% endcomment %}
<ul class="site-nav list--inline{% if wrapper_class != blank %} {{ wrapper_class }}{% endif %}" id="SiteNav">
  <span class="ShopText">Shop by:</span>
  {% for link in linklists[linklist].links %}
    {%- assign child_list_handle = link.title | handleize -%}

    {% comment %}
      Check if third-level nav exists on each parent link.
    {% endcomment %}
    {%- assign three_level_nav = false -%}
    {% if link.links != blank %}
      {% if link.levels == 2 %}
        {%- assign three_level_nav = true -%}
      {% endif %}
    {% endif %}
   
    {% if link.links != blank %}
      <li class="{%if link.title=="Color"%}nc-single-blk-dropdown {%endif%}site-nav--has-dropdown site-nav--has-centered-dropdown {% if link.active %} site-nav--active{% endif %}" data-has-dropdowns>
        <button class="site-nav__link site-nav__link--main site-nav__link--button{% if link.child_active %} site-nav__link--active{% endif %}" type="button" aria-expanded="false" aria-controls="SiteNavLabel-{{ child_list_handle }}">
          <span class="site-nav__label">{{ link.title | escape }} {% include 'icon-chevron-down' %}</span>
        </button>

        <div class="site-nav__dropdown site-nav__dropdown--centered" id="SiteNavLabel-{{ child_list_handle }}">
        <div class="MainMegaMenu">
         {%if link.title == "Color" %}
            <div class="site-nav__childlist">
            <ul class="site-nav__childlist-grid ColorMenuMob">
              
    {% for childlink in linklists[section.settings.colorList].links %}
        <li><a href="{{childlink.url}}">
          {% assign imagepath = "color-" | append: childlink.handle%}
         
          <img src="{{imagepath| append:".png" | file_url }}">
          </a></li>
      {%endfor%}
      </ul>
            </div>
          {%else%}
          <div class="mLeftMenu">
            
            {%if link.title == section.settings.title_1 or link.title == section.settings.title_2 or link.title == section.settings.title_3  %}
            {%include "nav-custom" %}
             
            {%else%}
          {% if three_level_nav %}
            <div class="site-nav__childlist">
              <ul class="site-nav__childlist-grid {%capture numberget%}{{forloop.index}}{%endcapture%}">
                {% if link.links != blank %}
                  {% for childlink in link.links %}
                    <li class="site-nav__childlist-item ">
                    
                      <a href="{{ childlink.url }}"
                        class="site-nav__link site-nav__child-link site-nav__child-link--parent"
                        {% if childlink.current %} aria-current="page"{% endif %}
                      >
                        <span class="site-nav__label">{{ childlink.title | escape }}</span>
                      </a>
                    
                      {% if childlink.links != blank %}
                        <ul>
                        {% for grandchildlink in childlink.links %}
                          <li>
                            <a href="{{ grandchildlink.url }}" {% if grandchildlink.type contains "collection_link" %} {% assign imagepath = grandchildlink.object.handle %} data-images="{{ collections[imagepath].image | img_url: "480x480" }}"{%endif%}
                            class="{% if grandchildlink.type contains "collection_link" %} {% assign imagepath = grandchildlink.object.handle %} {%if collections[imagepath].image != blank %}hoverworking {%endif%}{%endif%} site-nav__link site-nav__child-link"
                            {% if grandchildlink.current %} aria-current="page"{% endif %}
                          >
                              <span class="site-nav__label">{{ grandchildlink.title | escape }}</span>
                            </a>
                          </li>
                        {% endfor %}
                        </ul>
                      {% endif %}

                    </li>
                  {% endfor %}
                {% endif %}
              </ul>
            </div>
 
          {% else %}
            <ul>
              {% for childlink in link.links %}
                <li>
                  <a href="{{ childlink.url }}"
                  class="site-nav__link site-nav__child-link{% if forloop.last %} site-nav__link--last{% endif %}"
                  {% if childlink.current %} aria-current="page"{% endif %}
                >
                    <span class="site-nav__label">{{ childlink.title | escape }}</span>
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
              {% endif %}
          </div>
          <div class="mRightImg">
            <div class="InnerImage">
              {% if numberget == "1" %}
		<img data-srcing="{{section.settings.mega_img_1| img_url: "480x480"}}" src="{{section.settings.mega_img_1| img_url: "480x480"}}"/>
          {% elsif numberget == "2" %}
              <img data-srcing="{{section.settings.mega_img_2| img_url: "480x480"}}" src="{{section.settings.mega_img_2| img_url: "480x480"}}"/>
              {% elsif numberget == "3" %}
              <img data-srcing="{{section.settings.mega_img_3| img_url: "480x480"}}" src="{{section.settings.mega_img_3| img_url: "480x480"}}"/>
              {% elsif numberget == "4" %}
              <img data-srcing="{{section.settings.mega_img_4| img_url: "480x480"}}" src="{{section.settings.mega_img_4| img_url: "480x480"}}"/>
              {%endif%}
            </div>
            </div>
          {%if link.title == "Collections" or link.title == "Style" or link.title == "Room"%}
          <div class="Expand_all"><a href="{{link.url}}">Explore All</a></div>
          {%endif%}
          {%endif%}
         
          </div>
            
        </div>
      </li>
    {% else %}
      <li {% if link.active %} class="site-nav--active"{% endif %}>
        <a href="{{ link.url }}"
          class="site-nav__link site-nav__link--main{% if link.active %} site-nav__link--active{% endif %}"
          {% if link.current %} aria-current="page"{% endif %}
        >
          <span class="site-nav__label">{{ link.title | escape }}</span>
        </a>
      </li>
    {% endif %}
  {% endfor %}
</ul>
