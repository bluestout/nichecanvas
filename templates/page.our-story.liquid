<style>
  .our-story-wrapper {
    max-width: 1070px;
    margin-left: auto;
    margin-right: auto;
  }
  .our-story-wrapper h2 {
  	margin-top: 30px;
  }
  .values {
  	display: flex;
    flex-wrap: wrap;
    margin-bottom: 30px;
  }
  .values div {
    flex-basis: calc(50% - 7.5px);
    padding: 30px;
    background: #e8e9eb;    
    margin-bottom: 15px;
  }
  .values div:nth-child(2n+0) {
  	margin-left: 15px;
  }
  .values div:nth-child(1) {
  	border-top-left-radius: 15px;
  }
  .values div:nth-child(2) {
  	border-top-right-radius: 15px;
  }
  .values div:nth-child(3) {
  	border-bottom-left-radius: 15px;
  }
  .values div:nth-child(4) {
  	border-bottom-right-radius: 15px;
  }
  .values h3 {
  	font-weight: normal;
    font-size: 1.25em;
    font-style: italic;
  }
  .values h3 span {
    font-weight: bold;
  }
  .our-story-wrapper p {
  	text-align: justify;
  }
  .our-story-video {
    float: right;
    width: 400px;
    margin-left: 30px;
    margin-bottom: 30px;
  }
  .embed-container { position: relative; height: 0; overflow: hidden; max-width: 100%; padding-bottom: 56.25%;}
  .embed-container iframe, .embed-container object, .embed-container embed { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }
  @media (max-width: 768px) {
    .our-story-video {
      	width: 100%;
    	float: none;
      	margin-left: 0;
    }
    .values div {
    	flex-basis: 100%;
    }
    .values div:nth-child(2n+0) {
      margin-left: 0;
    }
    .values div:nth-child(2) {
      border-top-right-radius: 0;
    }
    .values div:nth-child(3) {
      border-bottom-left-radius: 0;
    }
  }
</style>
<div class="page-width">
  <div class="our-story-wrapper">
    <h1>{{ page.title }}</h1>
    <div>
      <div class="our-story-video">
        <div class='embed-container'><iframe src='https://www.youtube.com/embed/w-NyAH5bAdU?controls=0' frameborder='0' allowfullscreen></iframe></div>
      </div>
      {{ page.content }}
    </div>
    {% section "best-seller" %}
  </div>
</div>